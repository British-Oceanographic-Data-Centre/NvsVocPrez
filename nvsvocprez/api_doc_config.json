					{
					"in": "path",
					"name": "collection_id",
					"description": "#JC",
					"required": "True",
					"example": "C30"
					},
				    {
					"in": "path",
					"name": "acc_dep_or_concept",
					"description": "#JC",
					"required": "False",
					"schema": {
						"title": "Collection id Status",
						"type": "status of the collection id",
						"enum": ["accepted", "deprecated", "all", "None"]
					  },
					"example" :"accepted"
					},
					{
					"in": "query",
					"name": "_mediatype",
					"description": "#JC",
					"required": "True",
					"example": "application/rdf+xml"
					},
					{
					"in": "query",
					"name": "_profile",
					"description": "#JC",
					"required": "False",
					"example": "nvs"
					}
					]
				}
			}
